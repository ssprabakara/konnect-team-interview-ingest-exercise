<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE-stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %green([%t]) %highlight(%-5level)  %cyan(%c{1}:%L) - %m%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE-stdout" />
    </root>
</configuration>
